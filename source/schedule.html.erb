---
title: Schedule
---

<%= partial 'header' %>

<div class="section-title spacing-both">
  <div class="container">
    <h2>Schedule</h2>
  </div>
</div>

<div class="container spacing-bottom">
  <div class="container">
    <div class="schedule">
      <% data.schedule.each do |meta| %>
      <table>
        <thead>
          <tr>
            <th><h4><%= meta.day %></h4></th>
          </tr>
        </thead>

        <% meta.schedule.each do |entry| %>
        <tbody>
          <tr>
            <td class="schedule-time"><span><%= entry.time %></span></td>
            <% if entry.type == 'info' %>
            <td class="description"><%= entry.description %></td>
            <% else %>
            <td class="description">
              <%= entry.talk %><br/>
              <%= link_to entry.speaker, "/lineup##{entry.speaker.parameterize}", class: "fancy" %>
            </td>
            <% end %>
          </tr>
        </tbody>
        <% end %>
      </table>
      <% end %>

      <% data.workshop_schedule.each do |meta| %>
      <table>
        <thead>
          <tr>
            <th><h4><%= meta.day %></h4></th>
          </tr>
        </thead>

        <% meta.schedule.each do |entry| %>
        <tbody>
          <tr>
            <td class="schedule-time"><span><%= entry.time %></span></td>
            <td class="description">
              <%= entry.workshop %><br/>
              <%= link_to entry.trainer_1, "/lineup##{entry.trainer_1.parameterize}", class: "fancy" %>
              <% if entry.trainer_2 %>
              & <%= link_to entry.trainer_2, "/lineup##{entry.trainer_2.parameterize}", class: "fancy" %>
              <% end %>
            </td>
          </tr>
        </tbody>
        <% end %>

      </table>
      <% end %>
    </div>
  </div>
</div>

<%= partial 'footer' %>
