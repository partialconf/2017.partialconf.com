<!doctype html>
<html prefix="og: http://ogp.me/ns#">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="google-site-verification" content="WI9F_89CgcujDanrmDXrbSozmM2JpbjIFcBCAOXQk2g" />

    <title>partial :: Conf -> <%= current_page.data.title.presence || "Blog" %></title>

    <link rel="shortcut icon" href="/favicon.ico">

    <%= partial 'ogp' %>
    <%= stylesheet_link_tag "site" %>
    <%= javascript_include_tag "site" %>
    <%= partial 'fb_pixel' %>
  </head>
  <body class="blog-layout">
    <%= partial 'fb_events' %>
    <%= partial 'header' %>

    <div class="container">
      <div class="post-header">
        <h1><%= current_page.data.title %></h1>
        <div class="post-meta">
          Posted on <time><%= DateTime.parse(current_page.data.date).strftime('%B %e, %Y') %></time>
        </div>
      </div>

      <div class="content">
        <%= yield %>
      </div>
    </div>

    <%= partial 'footer' %>
    <%= partial 'analytics' %>
  </body>
</html>
